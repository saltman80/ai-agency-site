{
  "siteTitle": "AI Agency",
  "theme": {
    "mode": "dark",
    "accentColors": ["#00FFA3", "#DC1FFF"],
    "glassmorphism": {
      "background": "rgba(255,255,255,0.05)",
      "border": "1px solid rgba(255,255,255,0.2)",
      "borderRadius": "16px",
      "backdropFilter": "blur(12px)"
    }
  },
  "sections": [
    {
      "id": "home",
      "title": "Welcome to AI Agency",
      "tagline": "Specialized AI plugins and tools for every platform",
      "description": "We build custom AI plugins, extensions and content for WordPress, Shopify and more so you can scale faster and perform better.",
      "cta": {
        "text": "Discover Our Services",
        "link": "#services"
      },
      "animations": [
        {
          "selector": ".hero-title",
          "from": {"opacity": 0, "y": 20},
          "to": {"opacity": 1, "y": 0},
          "duration": 0.8,
          "delay": 0.2,
          "easing": "power3.out"
        },
        {
          "selector": ".hero-cta",
          "from": {"opacity": 0, "y": 20},
          "to": {"opacity": 1, "y": 0},
          "duration": 0.8,
          "delay": 0.4,
          "easing": "power3.out"
        }
      ]
    },
    {
      "id": "services",
      "title": "Our Services",
      "items": [
        {
          "icon": "plug",
          "title": "AI Plugins & Extensions",
          "description": "Custom plugins for WordPress, Shopify and more."
        },
        {
          "icon": "tools",
          "title": "Custom Tools",
          "description": "Specialized integrations tailored to your workflow."
        },
        {
          "icon": "file-alt",
          "title": "AI SEO Content",
          "description": "Optimized articles and social posts generated by AI."
        },
        {
          "icon": "rocket",
          "title": "Fast AI Coding",
          "description": "Expert coding that delivers results quickly and affordably."
        }
      ],
      "animations": [
        {
          "selector": ".service-item",
          "stagger": 0.2,
          "from": {"opacity": 0, "y": 30},
          "to": {"opacity": 1, "y": 0},
          "duration": 0.7,
          "easing": "power3.out",
          "trigger": "scroll"
        }
      ]
    },
    {
      "id": "projects",
      "title": "Recent Projects",
      "items": [
        {
          "title": "Predictive Maintenance System",
          "description": "Reduced downtime by 30% using machine learning for equipment health monitoring.",
          "link": "#",
          "image": "assets/images/project-placeholder.png",
          "alt": "Placeholder image for Predictive Maintenance System"
        },
        {
          "title": "NLP Chatbot Platform",
          "description": "Enhanced customer support with an AI-powered conversational agent.",
          "link": "#",
          "image": "assets/images/project-placeholder.png",
          "alt": "Placeholder image for NLP Chatbot Platform"
        },
        {
          "title": "Sales Forecasting Tool",
          "description": "Delivered 95% accuracy in revenue predictions with time-series models.",
          "link": "#",
          "image": "assets/images/project-placeholder.png",
          "alt": "Placeholder image for Sales Forecasting Tool"
        }
      ],
      "animations": [
        {
          "selector": ".project-item",
          "stagger": 0.2,
          "from": {"opacity": 0, "scale": 0.9},
          "to": {"opacity": 1, "scale": 1},
          "duration": 0.6,
          "easing": "power3.out",
          "trigger": "scroll"
        }
      ]
    },
    {
      "id": "about",
      "title": "About Us",
      "description": "AI Agency crafts specialized AI plugins, extensions and content so every business can scale efficiently. Our mission is to deliver custom solutions faster and for less than traditional development.",
      "animations": [
        {
          "selector": ".about-content",
          "from": {"opacity": 0, "x": -50},
          "to": {"opacity": 1, "x": 0},
          "duration": 0.8,
          "delay": 0.2,
          "easing": "power3.out",
          "trigger": "scroll"
        }
      ]
    },
    {
      "id": "contact",
      "title": "Get In Touch",
      "contactMethods": [
        {"type": "email", "value": "contact@aiagency.com", "icon": "envelope"},
        {"type": "phone", "value": "+1 (555) 123-4567", "icon": "phone"}
      ],
      "form": {
        "action": "/api/contact",
        "method": "POST",
        "fields": [
          {"name": "name", "type": "text", "placeholder": "Your Name*", "required": true},
          {"name": "email", "type": "email", "placeholder": "Your Email*", "required": true},
          {"name": "message", "type": "textarea", "placeholder": "Your Message*", "required": true}
        ],
        "submitText": "Send Message"
      },
      "animations": [
        {
          "selector": ".contact-item, .contact-form",
          "stagger": 0.2,
          "from": {"opacity": 0, "y": 20},
          "to": {"opacity": 1, "y": 0},
          "duration": 0.7,
          "easing": "power3.out",
          "trigger": "scroll"
        }
      ]
    }
  ],
  "footer": {
    "text": "? 2025 AI Agency. All rights reserved.",
    "socialLinks": [
      {"platform": "LinkedIn", "url": "https://linkedin.com/company/ai-agency", "icon": "linkedin"},
      {"platform": "Twitter", "url": "https://twitter.com/aiagency", "icon": "twitter"},
      {"platform": "GitHub", "url": "https://github.com/aiagency", "icon": "github"}
    ]
  }
}